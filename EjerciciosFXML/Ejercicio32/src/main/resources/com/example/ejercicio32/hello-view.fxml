<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.shape.Circle?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.ejercicio32.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Circle fx:id="circuloRojo" centerX="30" centerY="30" radius="50" fill="grey" onMouseEntered="#colorRojo" onMouseExited="#colorGrisRojo"/>
    <Circle fx:id="circuloAmarillo" centerX="30" centerY="30" radius="50" fill="grey"  onMouseEntered="#colorAmarillo" onMouseExited="#colorGrisAmarillo"/>
    <Circle fx:id="circuloVerde" centerX="30" centerY="30" radius="50" fill="grey"  onMouseEntered="#colorVerde" onMouseExited="#colorGrisVerde"/>
    <Button fx:id="Boton" minWidth="100" minHeight="30" text="Siguiente" onAction="#siguiente"/>
</VBox>
